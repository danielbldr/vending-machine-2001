<h1><%= @machine.location %> Vending Machine</h1>

<section>
  <h3>Snacks</h3>
  <ul>
    <% @machine.snacks.each do |snack| %>
      <li>Snack: <%= snack.name %>, Price: $<%= snack.price %></li>
    <% end %>
  </ul>
</section>

<section>
  <p>Average Price of Snacks: $<%= @machine.average_snack_price %></p>
</section>
